light-green = #0acbb1
green = #09b39c
dark-green = #089b87
almost-black = #25382f
gray = #9e9e9e
light-gray = #e8e8e8

// ************ HOMEPAGE ************ //

*, *:before, *:after
  box-sizing border-box

body
  font-family 'Lato', sans-serif
  background-color light-gray

div
  &.foo
    width 90%
    margin 0 auto
    text-align center

.letter
  display inline-block
  font-weight 900
  font-size 8em
  margin 0.2em
  position relative
  color green
  transform-style preserve-3d
  perspective 400
  z-index 1
  &:before
    color #fff
    text-shadow -1px 0 1px rgba(255,255,255,.8),
    1px 0 1px rgba(0,0,0,.8)
    z-index 3
    transform rotateX(0deg) rotateY(-15deg) rotateZ(0deg)
    -webkit-transform rotateX(0deg) rotateY(-15deg) rotateZ(0deg)
  &:after
    color rgba(0,0,0,.11)
    z-index 2
    transform scale(1.08,1) rotateX(0deg) rotateY(0deg) rotateZ(0deg) skew(0deg,1deg)
    -webkit-transform scale(1.08,1) rotateX(0deg) rotateY(0deg) rotateZ(0deg) skew(0deg,1deg)
  &:hover
    &:before
      color #fafafa
      transform rotateX(0deg) rotateY(-70deg) rotateZ(0deg)
      -webkit-transform rotateX(0deg) rotateY(-70deg) rotateZ(0deg)
    &:after
      transform scale(1.08,1) rotateX(0deg) rotateY(70deg) rotateZ(0deg) skew(0deg,22deg)
      -webkit-transform scale(1.08,1) rotateX(0deg) rotateY(70deg) rotateZ(0deg) skew(0deg,22deg)

.letter:before, .letter:after
  position absolute
  content attr(data-letter)
  transform-origin top left
  -webkit-transform-origin top left
  top 0
  left 0

.letter, .letter:before, .letter:after
  transition all 0.3s ease-in-out

.hero
  text-align center

.action-btn
  text-transform uppercase
  background-color green
  border-color dark-green
  border-radius 0
  height 100px
  font-size 3em
  letter-spacing 5px
  animation-duration 2s
  -webkit-animation-duration 2s
  animation-delay 2000
  -webkit-animation-delay 2000

.action-btn:hover
  background-color light-green
  border-color green

footer
  width 100%
  height 150px
  background-color almost-black
  color white

.maker
  font-family 'Josefin Sans', sans-serif
  font-weight 100
  font-size .9em
  padding-top 120px
  text-align center

#codepalette
  color white
  margin-left 5px

// ************ CARD VIEW ************ //

.glyphicon
  font-size 2.5em
  color green

.glyphicon:hover
  color light-green

#sidr
  background light-gray
  box-shadow none
  padding 20px

.sidr
  width 320px

.draggable
  display inline-block

.monster
  cursor move
  margin 10px

.monster:hover
  border 2px dashed white

.header
  font-family 'Londrina Sketch', cursive
  color white
  display inline-block
  margin-top 0
  letter-spacing 2px
  word-spacing 3px
  font-size 4em
  margin-left 25px

.notice-me
  text-transform uppercase
  display inline-block
  animation-duration 3s
  -webkit-animation-duration 3s
  animation-iteration-count infinite
  -webkit-animation-iteration-count infinite
  margin 0 30px
  font-size 1.4em

.dropzone
  padding 30px 50px 50px
  background black

.dropzone img
  width 1024px