light-green = #0acbb1
green = #09b39c
dark-green = #089b87
almost-black = #25382f
gray = #9e9e9e
light-gray = #e8e8e8

// ************ HOMEPAGE ************ //

*, *:before, *:after
  -moz-box-sizing border-box
  box-sizing border-box

body
  font-family 'Lato', sans-serif
  background-color light-gray

.hero
  text-align center

.letter
  display inline-block
  font-weight 900
  font-size 8em
  margin 0.2em
  position relative
  color green
  transform-style preserve-3d
  -webkit-transform-style preserve-3d
  // perspective 400px
  // -webkit-perspective 400
  z-index 1
  &:before
    color #fff
    text-shadow -1px 0 1px rgba(255,255,255,.8),
    1px 0 1px rgba(0,0,0,.8)
    z-index 3
    -webkit-transform rotateX(0deg) rotateY(-15deg) rotateZ(0deg)
    transform rotateX(0deg) rotateY(-15deg) rotateZ(0deg)
  &:after
    color rgba(0,0,0,.11)
    z-index 2
    -webkit-transform scale(1.08,1) rotateX(0deg) rotateY(0deg) rotateZ(0deg) skew(0deg,1deg)
    transform scale(1.08,1) rotateX(0deg) rotateY(0deg) rotateZ(0deg) skew(0deg,1deg)
  &:hover
    &:before
      color #fafafa
      -webkit-transform rotateX(0deg) rotateY(-70deg) rotateZ(0deg)
      transform rotateX(0deg) rotateY(-70deg) rotateZ(0deg)
    &:after
      -webkit-transform scale(1.08,1) rotateX(0deg) rotateY(70deg) rotateZ(0deg) skew(0deg,22deg)
      transform scale(1.08,1) rotateX(0deg) rotateY(70deg) rotateZ(0deg) skew(0deg,22deg)

.letter:before, .letter:after
  position absolute
  content attr(data-letter)
  -webkit-transform-origin top left
  transform-origin top left
  top 0
  left 0

.letter, .letter:before, .letter:after
  transition all 0.3s ease-in-out

.hiding-monster
  margin-bottom 22px
  margin-left 5px

.subtitle
  font-family 'Josefin Sans', sans-serif
  font-weight 300
  color almost-black
  margin-bottom 60px
  font-size 3em
  letter-spacing 2px
  word-spacing 10px

.action-btn
  text-transform uppercase
  background-color green
  border-color dark-green
  border-radius 0
  height 100px
  font-size 3em
  letter-spacing 5px
  -webkit-animation-duration 2s
  animation-duration 2s
  -webkit-animation-delay 1s
  animation-delay 1s

.action-btn:hover
  background-color light-green
  border-color green

footer
  width 100%
  height 150px
  background-color almost-black
  color white

.maker
  font-family 'Josefin Sans', sans-serif
  font-weight 100
  font-size .9em
  padding-top 120px
  text-align center

.codepalette
  color white
  margin-left 5px

.codepalette:hover
  color white

// ************ CARD VIEW ************ //

.down-arrow
  font-size .9em
  color green
  margin-left 40px

.down-arrow:hover
  color light-green

.header
  font-family 'Londrina Sketch', cursive
  color white
  letter-spacing 2px
  word-spacing 3px
  font-size 4em
  display inline-block
  padding 0
  margin-bottom 20px

.notice-me
  text-transform uppercase
  display inline-block
  -webkit-animation-duration 3s
  animation-duration 3s
  -webkit-animation-iteration-count infinite
  animation-iteration-count infinite
  margin 0 30px
  font-size 1.4em

.dropzone
  padding 20px 40px 40px
  background #34495E
  text-align center

#right-arrow, #left-arrow
  font-size 3em
  color white
  position relative
  top 476px
  z-index 3

#right-arrow:hover
  color gray

#left-arrow:hover
  color gray

#right-arrow
  float right
  margin-right 15px

#left-arrow
  float left
  margin-left 15px

.background
  border-radius 6px
  border 6px solid white
  min-height 1024px

#closet
  background white
  padding 40px

.monster-container
  background light-gray
  border-radius 6px
  padding 10px
  border 6px solid green
  text-align center

.closet-header
  font-family 'Londrina Sketch', cursive
  color dark-green
  letter-spacing 2px
  font-size 5em
  display inline-block

.draggable
  display inline-block
  margin 10px
  width 100px // This constrains the empty space after a monster is resized
  height 100px // This constrains the empty space after a monster is resized

.monster
  cursor move
  // position absolute // This constrains the empty space after a monster is resized
  // top 0 // This constrains the empty space after a monster is resized
  // left 0 // This constrains the empty space after a monster is resized
  width 100px
  height 100px

.monster:hover
  border 2px dashed white

.bubble
  cursor move
  display inline-block
  margin-bottom 18px
  width 250px
  position relative
  padding 10px
  background light-gray
  border-radius 6px
  z-index 2
  &:after
    content ""
    position absolute
    bottom -23px
    left 52px
    border-style solid
    border-width 24px 15px 0
    border-color light-gray transparent
    display block
    width 0
    z-index 1

.bubble:hover
  border 2px dashed gray

.editable-bubble, .old-bubble
  margin-bottom 30px

.jiggly
  -webkit-animation jiggle 0.2s infinite
  -moz-animation jiggle 0.2s infinite
  -webkit-transform rotate(-1deg)
  -moz-transform rotate(-1deg)

@-webkit-keyframes jiggle
  0%
    -webkit-transform rotate(-1deg)
  50%
    -webkit-transform rotate(1deg)

@-moz-keyframes jiggle
  0%
    -moz-transform rotate(-1deg)
  50%
    -moz-transform rotate(1deg)

.bouncing-arrow
  -webkit-animation bounce 1s infinite
  animation bounce 1s infinite

@keyframes bounce
  0%
    top 0
  50%
    top 10px
  100%
    top 0